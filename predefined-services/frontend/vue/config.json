{
    "label": "Vue",
    "preselected": "false",
    "demoAppInitCmd": [
        "vue create -dnf ${{PROJECT_NAME_CONTAINER}}",
        "rm -rf ${{PROJECT_NAME_CONTAINER}}/node_modules",
        "mv ${{PROJECT_NAME_CONTAINER}}/* ${{VUE_SOURCE_DIRECTORY}}",
        "rm -rf ${{PROJECT_NAME_CONTAINER}}"
    ],
    "files": [
        {
            "path": "service.yml",
            "type": "service"
        },
        {
            "path": "README.md",
            "type": "docs"
        },
        {
            "path": "frontend/Dockerfile",
            "type": "docker"
        }
    ],
    "questions": [
        {
            "text": "On which port you want to expose your Vue app?",
            "type": 2,
            "defaultValue": "80",
            "validator": "port",
            "variable": "VUE_PORT"
        },
        {
            "text": "Which version of NodeJS do you want to use?",
            "type": 2,
            "defaultValue": "lts",
            "variable": "VUE_NODE_VERSION"
        }
    ],
    "volumes": [
        {
            "text": "Custom path for source directory?",
            "defaultValue": "./frontend",
            "variable": "VUE_SOURCE_DIRECTORY",
            "withDockerfile": true
        }
    ]
}