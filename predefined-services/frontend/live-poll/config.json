{
    "label": "Live-Poll",
    "preselected": "false",
    "serviceInitCmd": [
        "git clone https://github.com/livepoll/live-poll.git ${{LIVE_POLL_SOURCE_DIRECTORY}}",
        "cd ${{LIVE_POLL_SOURCE_DIRECTORY}}",
        "yarn install",
        "yarn run build:themes",
        "yarn run build:prod"
    ],
    "files": [
        {
            "path": "service.yml",
            "type": "service"
        },
        {
            "path": "README.md",
            "type": "docs"
        }
    ],
    "questions": [
        {
            "text": "On which port you want to expose your Live-Poll instance?",
            "type": 2,
            "defaultValue": "80",
            "validator": "port",
            "variable": "LIVE_POLL_PORT"
        },
        {
            "text": "Which version of the Live-Poll do you want to use?",
            "type": 2,
            "defaultValue": "latest",
            "variable": "LIVE_POLL_VERSION"
        }
    ],
    "volumes": [
        {
            "text": "Custom path for source directory?",
            "defaultValue": "./frontend",
            "variable": "LIVE_POLL_SOURCE_DIRECTORY",
            "withDockerfile": true
        }
    ]
}
